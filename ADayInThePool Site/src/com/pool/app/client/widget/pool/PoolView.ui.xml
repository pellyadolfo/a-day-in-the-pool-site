<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
	xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<g:HTMLPanel addStyleNames="portfolio-item col-xs-12 col-sm-4 col-md-3">
		<div class="recent-work-wrap">
			<img ui:field="image" addStyleNames="img-responsive" src="images/portfolio/recent/item1.png" alt="" />
			<div class="overlay">
				<div class="recent-work-inner">
					<h3><a href="#"><b.html:Text ui:field="name"/></a></h3>
					<p><b.html:Text ui:field="description"/></p>
					<a class="preview" href="images/portfolio/full/item1.png" rel="prettyPhoto">
						<i class="fa fa-eye"></i>
						<b.html:Text ui:field="view"/>
					</a>
				</div>
			</div>
		</div>
	</g:HTMLPanel>  

</ui:UiBinder>
